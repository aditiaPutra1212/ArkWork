datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // pastikan TIDAK ada "output = ..." kalau kamu import dari @prisma/client
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  name         String?
  passwordHash String
  photoUrl     String?
  cvUrl        String?
}
