datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  photoUrl     String?
  cvUrl        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt @default(now())  // <-- tambahkan default
}

model Admin {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt @default(now())  // <-- tambahkan default
}
